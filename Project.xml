	<icon path="assets/icons/bubble-icon16.png" size="16" />
	<icon path="assets/icons/bubble-icon20.png" size="20" if="ios"/>
	<icon path="assets/icons/bubble-icon29.png" size="29" if="ios"/>
	<icon path="assets/icons/bubble-icon32.png" size="32" />
	<icon path="assets/icons/bubble-icon36.png" size="36" if="android"/>
	<icon path="assets/icons/bubble-icon40.png" size="40" if="ios"/>
	<icon path="assets/icons/bubble-icon48.png" size="48" if="android"/>
	<icon path="assets/icons/bubble-icon50.png" size="50" if="ios"/>
